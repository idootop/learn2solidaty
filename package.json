{
  "name": "learn2solidity",
  "description": "Learn Solidity smart contracts",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "clean": "shx rm -rf ./types ./cache ./artifacts ./coverage ./coverage.json",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "deploy": "hardhat deploy:Greeter",
